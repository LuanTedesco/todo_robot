<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, as: :text, input_html: { class: 'form-control' } %>
    <%= f.input :start_date, as: :date %>
    <%= f.input :end_date, as: :date %>
    <%= f.input :result, as: :text, input_html: { class: 'form-control' } %>
    <%= f.input :priority, as: :select, collection: Task.priorities.keys.map { |s| [s.humanize, s] } %>
    <%= f.input :status, as: :select, collection: Task.statuses.keys.map { |s| [s.humanize, s] } %>
    <%= f.input :finished, as: :boolean %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, 'Salvar', class: 'btn btn-primary' %>
  </div>
<% end %>
